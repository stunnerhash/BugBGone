  <link rel="icon" type="image/png" href="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcRP1AQ8wr_lDcdkHdbI8BfmZBi-LotZpXzG0Q&usqp=CAU">
  <link rel="canonical" href="https://getbootstrap.com/docs/4.5/examples/floating-labels/">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    
    <!-- jQuery and JS bundle w/ Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

  <!-- Custom styles for this template -->
  <link href="css/stylestodo.css" rel="stylesheet"> 
  <link rel="stylesheet" href="css/styles.css">
  
  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      } 
    }
  </style>
  </head>

  <body style="background-image: -webkit-linear-gradient(65deg, #5da6fa 40%, #E4E9FD 60%);" >
<span style="margin: 0px auto;">
  <div class="box" id="heading">
  <h2> <%= listTitle%></h2>
</div>
<div class="box" >
      <% for(var i=0;i< newListItems.length;i++) { %>
        <div class="checkbox mb">  
          <p><input  type="checkbox">    
           <%= newListItems[i] %></p>
        </div>
      <% } %>
    <hr class="my-1">
  <form action="/" method="post">
    <input type="text" name="item" placeholder="To-Do Item" autocapitalize="on" autocomplete="off">
    <button style="background-color:  #5da6fa;" class="btn button btn-primary " type="submit" name="button">+</button>
  </form>  
  <hr class="my-3">
</div>
<p class="mt-5 mb-3 text-muted text-center">&copy;  stunnerhash2020</p>
</span>
</body>
</html>